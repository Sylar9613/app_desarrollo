{{ form_start(form) }}
    {% if form_errors(form.nombre) %}
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!</strong>{{ form_errors(form.nombre) }}
        </div>
    {% endif %}
    {% if form_errors(form.indicadores) %}
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!</strong>{{ form_errors(form.indicadores) }}
        </div>
    {% endif %}
    {% if form_errors(form.acciones) %}
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!</strong>{{ form_errors(form.acciones) }}
        </div>
    {% endif %}
    {% if form_errors(form) %}
        <div class="alert alert-danger fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Error!</strong>{{ form_errors(form) }}
        </div>
    {% endif %}
    <div class="form-group">
        {{ form_row(form.nombre) }}
        {{ include('admin/validation_js.html.twig', {'id_req':'req-nombre', 'id_span':'span-nombre'}) }}
        <div style="margin-top: 25px; margin-bottom: 30px;">
            {{ form_row(form.indicadores) }}
            {{ include('admin/validation_js.html.twig', {'id_req':'req-ind', 'id_span':'span-ind'}) }}
        </div>
        <h6>{{ form_label(form.acciones) }}</h6>
        <ul class="acciones" data-prototype="{{ form_widget(form.acciones.vars.prototype)|e('html_attr') }}">
            <div style="margin-left: 40px;">
                {% for accion in form.acciones %}
                    <li style="border-top: 1px solid #3B5998; padding-top: 20px; margin-left: -40px; list-style-type:none;">{{ form_widget(accion) }}</li>
                {% endfor %}
            </div>
        </ul>
        {{ include('admin/validation_js.html.twig', {'id_req':'req-acc', 'id_span':'span-acc'}) }}
        {{ form_widget(form.acciones) }}
        <br/><br/>
    </div>
    <br/>
    <button class="btn {{ button_class|default('btn-success') }} btn-block text-white"><i class="fa fa-fw {{ button_fa|default('fa-save') }}"></i>&nbsp;{{ button_label|default('Guardar') }}</button>
{{ form_end(form) }}
<script>
    function validateFields(input) {
        if (input === '1'){
            var spanNombre = document.getElementById('span-nombre');
            var inputNombre = document.getElementById("linea_estrategica_nombre");
            if (inputNombre.checkValidity() === false) {
                $('#req-nombre').removeClass('collapse');
                spanNombre.innerHTML = inputNombre.validationMessage;
                $('#linea_estrategica_nombre:invalid').css("border", "1px solid #dc3545");
            }
            else {
                $('#req-nombre').addClass('collapse');
                $('#linea_estrategica_nombre').css("border", "1px solid #ced4da");
            }
        }
        if (input === '2'){
            var spanInd = document.getElementById('span-resp');
            var inputInd = document.getElementById("linea_estrategica_indicadores");
            if (inputInd.checkValidity() === false) {
                $('#req-ind').removeClass('collapse');
                spanInd.innerHTML = inputInd.validationMessage;
                $('#linea_estrategica_indicadores:invalid').css("border", "1px solid #dc3545");
            }
            else {
                $('#req-ind').addClass('collapse');
                $('#linea_estrategica_indicadores').css("border", "1px solid #ced4da");
            }
        }
    }
</script>