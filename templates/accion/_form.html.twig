<script>
    function validateFields(input) {
        if (input === '1'){
            var spanNombre = document.getElementById('span-nombre');
            var inputNombre = document.getElementById("accion_nombre");
            if (inputNombre.checkValidity() === false) {
                $('#req-nombre').removeClass('collapse');
                spanNombre.innerHTML = inputNombre.validationMessage;
                $('#accion_nombre:invalid').css("border", "1px solid #dc3545");
            }
            else {
                $('#req-nombre').addClass('collapse');
                $('#accion_nombre').css("border", "1px solid #ced4da");
            }
        }
        if (input === '2'){
            var spanFecha = document.getElementById('span-fecha');
            var inputFecha = document.getElementById("accion_fecha");
            if (inputFecha.checkValidity() === false) {
                $('#req-fecha').removeClass('collapse');
                spanFecha.innerHTML = inputFecha.validationMessage;
                $('#accion_fecha:invalid').css("border", "1px solid #dc3545");
            }
            else {
                $('#req-fecha').addClass('collapse');
                $('#accion_fecha').css("border", "1px solid #ced4da");
            }
        }
    }
</script>
