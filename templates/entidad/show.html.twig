{% extends 'base.html.twig' %}

{% block title %}
    Ver 
    {{ entidad.nombre }}
{% endblock %}

{% block body %}
    <br/>
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            {{ routes[0] }}
        </li>
        <li class="breadcrumb-item">
            <a class="normal" href="{{ path('entidad_index') }}">
                {{ routes[1] }}
            </a>
        </li>
        <li class="breadcrumb-item activo">
            {{ routes[2] }}
        </li>
    </ol>
    <h1>
        Entidad
    </h1>
    {{ include('admin/errors.html.twig') }}
    <table class="table table-hover">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}
                <tr>
                    <th>
                        Id
                    </th>
                    <td>
                        {{ entidad.id }}
                    </td>
                </tr>
            {% endif %}
            <tr>
                <th>
                    Nombre
                </th>
                <td>
                    {{ entidad.nombre }}
                </td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') and entidad.activo==1 %}
        <a href="{{ path('entidad_edit', { 'id': entidad.id }) }}" class="btn btn-warning text-white btn-block">
            <i class="fa fa-fw fa-edit"></i>
            &nbsp;Editar
        </a>
        {{ include('entidad/_delete_form.html.twig') }}
    {% endif %}
    <a href="{{ path('entidad_index') }}" class="btn btn-secondary btn-block text-white">
        Atr&aacute;s
    </a>
{% endblock %}
